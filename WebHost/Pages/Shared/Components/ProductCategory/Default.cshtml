@model List<BookCity.Query.Contract.ProductCategory.ProductCategoryQueryViewModel>

<div class="category-area section-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!--=======  category wrapper  =======-->
                <div class="category-wrapper">
                    <div class="row row-10 masonry-category-layout">

                        @foreach(var item in Model){
                            <div class="col-lg-3 col-sm-6 grid-item">
                                <!--=======  single category item  =======-->
                                <div class="single-category-item">
                                    <div class="single-category-item__image">
                                        <a href="/ProductCategory/@item.Slug">
                                            <img src="~/ProductPictures/@item.Picture" class="img-fluid" style="height:370px; border-radius:4%;"
                                            title="@item.PictureTitle"
                                            alt="@item.PictureAlt">
                                        </a>
                                    </div>
                                    <div class="single-category-item__content">
                                        <h3 class="title text-black  bg-white text-center p-1" style="border-radius:30%;">@item.Name </h3>
                                        <a href="/ProductCategory/@item.Slug" class="text-white btn btn-info" style=" border-radius:20%;">
                                            <i class="ion-android-arrow-dropleft-circle "></i> همین حالا بخرید
                                        </a>
                                    </div>
                                </div>
                                <!--=======  End of single category item  =======-->
                            </div>
                        }

                        
                    
                    </div>
                </div>
                <!--=======  End of category wrapper  =======-->
            </div>
        </div>
    </div>
</div>