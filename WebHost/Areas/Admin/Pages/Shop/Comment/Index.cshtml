@page
@model WebHost.Areas.Admin.Pages.Shop.Comment.IndexModel
@{
}


@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "مدیریت  کامنت";
}



<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title ">جستجو در اسلاید</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                   
                     <div class="form-group">
                        <label asp-for="searchModel.Name" class="sr-only"></label>
                        <input type="text" class="form-control" asp-for="searchModel.Name" placeholder="نام">
                    </div>
                    <div class="form-group">
                        <label asp-for="searchModel.Email" class="sr-only"></label>
                        <input type="text" class="form-control" asp-for="searchModel.Email" placeholder="ایمیل">
                    </div>
                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست کامنت ها</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>نام</th>
                                    <th>ایمیل</th>
                                    <th>محصول</th>
                                    <th>متن نظر</th>
                                    <th>تاریخ</th>
                                    <th>وضعیت</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Comments)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                       
                                        <td>@item.Name</td>
                                        <td>@item.Email</td>
                                        <td>@item.ProductName</td>
                                        <td>@item.Massege</td>
                                        <td>@item.CommentDate</td>
                                        <td class="text-center">

                                            @if (@item.IsCanceled)
                                            {
                                                <span class=" text-danger">کنسل شده</span>
                                            }
                                            @if (!item.IsCanceled  && !item.IsConfirmed )
                                            {
                                                <span class="text-info"> در حال انتظار</span>
                                            }
                                            @if (!item.IsCanceled && item.IsConfirmed)
                                            {
                                                <span class="text-success">  تایید شده </span>
                                            }
                                        </td>

                                        
                                        <td>

                                            <a asp-page="./Index" asp-page-handler="Cancel"
                                           asp-route-id="@item.Id" class="btn btn-danger ">
                                                کنسل
                                            </a>
                                            @if (!item.IsConfirmed)
                                            {
                                                <a asp-page="./Index" asp-page-handler="Confirm"
                                                asp-route-id="@item.Id" class="btn btn-success ">
                                                تایید
                                                </a>
                                            }
                                           
                                            

                                        </td>
                                       

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script src="~/AdminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminTheme/assets/datatables/dataTables.bootstrap.js"></script>
    <script src="~/admintheme/assets/datatables/datatables.bootstrap.js"></script>
    <script src="~/admintheme/assets/datatables/datatables.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}